@model Gestper.Models.Bitacora

@{
    ViewBag.Title = "Editar Bitácora";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="text-primary mb-4">Editar Bitácora</h1>

            @using (Html.BeginForm("Edit", "Bitacora", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="mb-3">
                    @Html.LabelFor(model => model.Descripcion, "Descripción", new { @class = "form-label" })
                    @Html.TextAreaFor(model => model.Descripcion, new { @class = "form-control", rows = "3" })
                    @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.Accion, "Acción", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.Accion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Accion, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(model => model.FechaCreacion, "Fecha de Creación", new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.FechaCreacion, "{0:yyyy-MM-ddTHH:mm}", new { @class = "form-control", @type = "datetime-local" })
                    @Html.ValidationMessageFor(model => model.FechaCreacion, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary me-2">Guardar Cambios</button>
                <a asp-controller="Bitacora" asp-action="Index" class="btn btn-secondary">Volver</a>
            }
        </div>
    </div>
</div>

@section Scripts {
    @@Scripts.Render("~/bundles/jqueryval")
}