@model List<Gestper.Models.Bitacora>

@{
    Layout = null;
    string rol = Context.Session.GetString("UsuarioRol") ?? "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Bitácora del Ticket</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        .bitacora-header label {
            font-weight: 500;
            margin-right: 10px;
        }
        .bitacora-header .info {
            margin-bottom: 10px;
        }
        .bitacora-table th, .bitacora-table td {
            vertical-align: middle;
            text-align: left;
        }
        textarea.form-control {
            resize: none;
        }
    </style>
</head>
<body class="bg-white">
    <div class="container py-4">
        <h5 class="text-primary mb-4">BITÁCORA DE TRABAJO</h5>

        @if (TempData["MensajeExito"] != null)
        {
            <div class="alert alert-success">@TempData["MensajeExito"]</div>
        }

        <!-- Datos de encabezado -->
        <div class="bitacora-header row">
            <div class="col-md-4 info"><label>Elaborado por:</label></div>
            <div class="col-md-4 info"><label>Fecha de creación:</label></div>
            <div class="col-md-4 info"><label>Hora de creación:</label></div>
        </div>

        <!-- Tabla con edición -->
        <table class="table table-bordered bitacora-table">
            <thead class="table-primary">
                <tr>
                    <th style="width: 20%;">Fecha</th>
                    <th>Descripción</th>
                    @if (rol == "1" || rol == "2" || rol == "3")
                    {
                        <th>Acciones</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <form method="post" asp-action="EditarBitacora" asp-controller="Bitacora">
                                <input type="hidden" name="id" value="@item.Id" />
                                <textarea class="form-control" name="descripcion" rows="2">@item.Descripcion</textarea>
                                @if (rol == "1" || rol == "2" || rol == "3")
                                {
                                    <button type="submit" class="btn btn-sm btn-success mt-2">Guardar</button>
                                }
                            </form>
                        </td>
                        @if (rol == "1" || rol == "2" || rol == "3")
                        {
                            <td><span class="text-muted">Edición directa</span></td>
                        }
                    </tr>
                }
            </tbody>
        </table>

        <!-- Botón cerrar -->
        <a href="javascript:window.close()" class="btn btn-secondary mt-3">Cerrar</a>

        @if (rol == "1" || rol == "2")
        {
            var controlador = rol == "1" ? "HomeControllerAdmin" : "Trabajador";
            <a asp-controller="@controlador" asp-action="Index" class="btn btn-outline-primary mt-3">
                ← Volver al panel principal
            </a>
        }

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>