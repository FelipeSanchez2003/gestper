<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Gestper</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" />

    @RenderSection("Styles", required: false)
</head>
<body>
<style>
    :root {
        --primary-color: #4361ee;
        --secondary-color: #3a0ca3;
        --accent-color: #4cc9f0;
        --dark-color: #1a1a2e;
        --light-color: #f8f9fa;
    }

    body {
        padding-top: 80px;
        font-family: 'Poppins', sans-serif;
        background-color: #f8fafc;
        color: #333;
    }

    .navbar {
        box-shadow: 0 2px 15px rgba(0, 0, 0, 0.1);
        background-color: white !important;
    }

    .navbar-brand,
    .nav-link,
    .navbar-toggler-icon {
        color: #1a1a2e !important;
    }

    .nav-link {
        font-weight: 500;
        position: relative;
        margin: 0 8px;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        color: var(#1a1a2e) !important;
    }

    .nav-link:after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: 0;
        left: 0;
        background-color: #1a1a2e;
        transition: width 0.3s ease;
    }

    .nav-link:hover:after {
        width: 100%;
    }

    .btn-primary {
        background-color: var(#1a1a2e);
        border-color: var(#1a1a2e);
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background-color: var(#3a0ca3);
        border-color: var(#3a0ca3);
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(67, 97, 238, 0.3);
    }

    .footer {
        background-color: var(#4cc9f0);
        color: white;
    }

    .footer a {
        color: #adb5bd;
        transition: color 0.3s ease;
    }

    .footer a:hover {
        color: black;
        text-decoration: none;
    }

    .footer h5 {
        color: #1a1a2e !important;
        margin-bottom: 1rem;
        font-weight: 600;
    }

    .social-icon {
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

    .social-icon:hover {
        transform: translateY(-3px);
        color: var(#3a0ca3) !important;
    }

    /* Efecto hover para las cards del footer */
    .list-unstyled li {
        margin-bottom: 0.5rem;
        transition: transform 0.3s ease;
    }

    .list-unstyled li:hover {
        transform: translateX(5px);
    }
</style>

<header>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img src="~/images/Gestper-logo_Mesa-de-trabajo-1.png" alt="Gestper" height="60" class="animate__animated animate__fadeIn" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Caracteristicas" asp-action="Caracteristicas">Características</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Nosotros" asp-action="Nosotros">Nosotros</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contacto" asp-action="Contacto">Contacto</a>
                    </li>
                    @if (!(ViewContext.RouteData.Values["controller"]?.ToString() == "Usuario" &&
                    ViewContext.RouteData.Values["action"]?.ToString() == "Login"))
                    {
                    <li class="nav-item ms-lg-3">
                        <a class="btn btn-primary animate__animated animate__pulse animate__infinite animate__slower" asp-controller="Usuario" asp-action="Login">Iniciar sesión</a>
                    </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>

<main role="main" class="animate__animated animate__fadeIn">
    @RenderBody()
</main>

<footer class="footer py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4 mb-lg-0">
                <h5 class="text-white mb-4">Gestper</h5>
                <p class="text-muted">Sistema integral de gestión de personal para empresas modernas.</p>
                <div class="mt-4">
                    <a href="#" class="text-decoration-none me-3 social-icon"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-decoration-none me-3 social-icon"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-decoration-none me-3 social-icon"><i class="bi bi-linkedin"></i></a>
                    <a href="#" class="text-decoration-none social-icon"><i class="bi bi-instagram"></i></a>
                </div>
            </div>
            <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                <h5 class="text-white mb-4">Empresa</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a class="text-decoration-none" asp-controller="Nosotros" asp-action="Nosotros">Nosotros</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none">Equipo</a></li>
                    <li><a href="#" class="text-decoration-none">Carreras</a></li>
                </ul>
            </div>
            <div class="col-lg-2 col-md-6 mb-4 mb-md-0">
                <h5 class="text-white mb-4">Recursos</h5>
                <ul class="list-unstyled">
                    <li class="mb-2"><a href="#" class="text-decoration-none">Blog</a></li>
                    <li class="mb-2"><a href="#" class="text-decoration-none">Documentación</a></li>
                    <li><a class="text-decoration-none" asp-controller="Ticket" asp-action="Create">Soporte</a></li>
                </ul>
            </div>
            <div class="col-lg-4 col-md-6">
                <h5 class="text-white mb-4">Contáctanos</h5>
                <p class="text-muted mb-4">¿Tienes preguntas? Estamos aquí para ayudarte.</p>
                <ul class="list-unstyled">
                    <li class="mb-2"><i class="bi bi-envelope me-2"></i><a href="mailto:alejandro.espinoza@gestper.cl" class="text-decoration-none">alejandro.espinoza@gestper.cl</a></li>
                    <li class="mb-2"><i class="bi bi-telephone me-2"></i><a href="tel:+56971398861" class="text-decoration-none">+569 71398861</a></li>
                    <li><i class="bi bi-telephone me-2"></i><a href="tel:+56944212536" class="text-decoration-none">+569 44212536</a></li>
                </ul>
            </div>
        </div>
        <hr class="my-4 bg-secondary">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <p class="mb-3 mb-md-0 text-muted">&copy; @DateTime.Now.Year Copyright Adinex</p>
            <div class="d-flex">
                <a href="#" class="text-decoration-none text-muted me-3">Política de Privacidad</a>
                <a href="#" class="text-decoration-none text-muted">Términos de Servicio</a>
            </div>
        </div>
    </div>
</footer>

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Font Awesome (opcional, si necesitas más iconos) -->
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<!-- Scripts personalizados -->
<script src="~/js/site.js"></script>

<!-- Smooth scroll -->
<script>
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
</script>

@RenderSection("Scripts", required: false)
</body>
</html>